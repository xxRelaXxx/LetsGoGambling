<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1080.0" stylesheets="@menu.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="menu.LogInController">
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btBack" mnemonicParsing="false" onAction="#goBack" text="Back to start menu" />
            <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-alignment: center;" text="NOME CASINO" />
         </children>
      </HBox>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-alignment: center;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Username" />
            <TextField fx:id="inpUsername" promptText="username" />
            <Label text="Password" />
            <TextField fx:id="inpPsw" promptText="******" />
            <Button fx:id="btLogIn" mnemonicParsing="false" onAction="#logIn" text="Log-In" />
            <Label fx:id="lbUserNotFound" text="User not found. " visible="false" />
            <Label fx:id="lbWrongPsw" text="Wrong password" visible="false" />
            <Label fx:id="lbEmptyFields" text="Empty fields" visible="false" />
         </children>
      </VBox>
   </center>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1080.0" stylesheets="" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="menu.GameChoiceMenuController">
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btGoBack" mnemonicParsing="false" onAction="#goBack" text="Back to mode choice" />
            <Button fx:id="btViewStats" mnemonicParsing="false" onAction="#viewStats" text="View stats" />
            <Label text="NOME CASINO " />
            <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-alignment: top-left;">
               <children>
                  <ImageView fitHeight="93.0" fitWidth="105.0" pickOnBounds="true" preserveRatio="true" />
                  <Label text="Money" />
               </children>
            </VBox>
         </children>
      </HBox>
   </top>
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btCraps" mnemonicParsing="false" onAction="#startCraps" text="Game1" />
            <Button fx:id="btGuessNumber" mnemonicParsing="false" onAction="#startGuessNumber" text="Game2" />
            <Button fx:id="btRoulette" mnemonicParsing="false" onAction="#startRoulette" text="Game3" />
            <Button fx:id="btSlotMachines" mnemonicParsing="false" onAction="#startSlotMachines" text="Game4" />
            <Button fx:id="btGame5" mnemonicParsing="false" onAction="#startGame5" text="Game5" />
         </children>
      </HBox>
   </center>
</BorderPane>
